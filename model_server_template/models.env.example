# Model Server Environment Configuration

# Model file path (absolute path recommended)
MODEL_PATH=/opt/trading_model/models/trading_model.txt
MODEL_TYPE=lightgbm

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Training Data
TRAINING_DATA_PATH=/opt/trading_model/training_data/live_samples.jsonl

# Data Collection Settings
COLLECTION_INTERVAL=60
LOOKBACK_PERIODS=100

# Training Settings
TRAINING_INTERVAL=1800
MIN_SAMPLES_FOR_RETRAIN=100
TRAINING_BATCH_SIZE=1000

# LightGBM Memory Settings (USE FULL 7.5GB)
LGBM_MAX_MEMORY_GB=7.2
LGBM_NUM_THREADS=6
LGBM_MAX_BIN=511

# Inference Settings
BATCH_SIZE=1
MAX_SEQUENCE_LENGTH=100

# Logging
LOG_LEVEL=INFO
