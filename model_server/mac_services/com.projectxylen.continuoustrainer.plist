<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.projectxylen.continuoustrainer</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/opt/trading_model/venv/bin/python</string>
        <string>/usr/local/opt/trading_model/continuous_trainer.py</string>
    </array>
    
    <key>WorkingDirectory</key>
    <string>/usr/local/opt/trading_model</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/opt/trading_model/venv/bin:/usr/local/bin:/usr/bin:/bin</string>
        <key>PYTHONUNBUFFERED</key>
        <string>1</string>
    </dict>
    
    <key>StandardOutPath</key>
    <string>/usr/local/opt/trading_model/logs/continuous_trainer.log</string>
    
    <key>StandardErrorPath</key>
    <string>/usr/local/opt/trading_model/logs/continuous_trainer.error.log</string>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>
    
    <key>ProcessType</key>
    <string>Background</string>
    
    <key>Nice</key>
    <integer>10</integer>
    
    <key>ThrottleInterval</key>
    <integer>30</integer>
    
    <key>SoftResourceLimits</key>
    <dict>
        <key>NumberOfFiles</key>
        <integer>4096</integer>
    </dict>
</dict>
</plist>
